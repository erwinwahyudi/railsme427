<!-- untuk cek error saat input data -->
<% if @user.errors.any? %>
		<div id="error_explanation">
			<h2> <%= pluralize(@user.errors.count, "error") %> Tidak dapat menyimpan </h2>
			<ul>
				<% @user.errors.full_message.each do |message| %>
					<li> <%= message %> </li>
				<% end %>
			</ul>
		</div>
<% end %>

<div class="form-group">
	<label class="col-lg-3 control-label" for="article_title">Nama</label>
	<div class="col-lg-9">
		<input type="text" name="user[nama]" value="<% @user.nama %>" class="form-control" >
	</div>
</div>

<div class="form-group">
	<label class="col-lg-3 control-label" for="article_title">Username</label>
	<div class="col-lg-9">
		<input type="text" name="user[username]" value="<% @user.username %>" class="form-control" >
	</div>
</div>

<div class="form-group">
	<label class="col-lg-3 control-label" for="article_title">Email</label>
	<div class="col-lg-9">
		<input type="text" name="user[email]" value="<% @user.email %>" class="form-control" >
	</div>
</div>


<div class="form-group">
	<div class="col-sm-2 col-sm-offset-3">
		<button type="submit" class="btn btn-primary">Simpan</button>
	</div>
</div>


